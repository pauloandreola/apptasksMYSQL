{
  "openapi": "3.0.0",
  "info": {
    "title": "Tasks Application",
    "description": "Tasks Manager Application",
    "version": "1.0.0",
    "contact": {
      "email": "paulo.andreola@dataside.com.br",
      "url": "https://dataside.com.br"
    }
  },
  "servers": [{ "url": "http://localhost:3000" }],
  "paths": {
    "/users/register/": {
      "post": {
        "tags": [ "Users" ],
        "summary": "Create a new user",
        "description": "Create a new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Insert name, email, password and password again to create a new account."
          }
        }
      }
    },
    "/users/login/": {
      "post": {
        "tags": [ "Users" ],
        "summary": "Login",
        "description": "Login",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string"
                    },
                    "password": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "email": "teste@gmail.com",
                    "password": "123456"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Insert correct email and password."
          }
        }
      }
    },
    "/users/avatar": {
      "patch": {
        "tags": [ "Users" ],
        "summary": "Insert photo",
        "description": "Insert a photo",
        "requestBody": {
          "content": {
            "multipart/form-data": {
            "application/json": {
              "schema": {
                 "type":  "object",
                  "properties": {
                    "user_id": {
                      "type": "integer"
                    },
                    "avatar": {
                      "type": "string",
                     "format": "binary"
                    } 
                  }
                }
              }
            }  
          }
        },        
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/user_photo"
                }
              }
            }
          },
          "500": {
            "description": "User not found."
          }
        }
      }
    },
    "/users/": {
      "put": {
        "tags": [ "Users" ],
        "summary": "Edit user by id",
        "description": "Edit a exist user by id",
        "parameters": [
          {
            "name": "id",
            "in": "header",
            "description": "The user Id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/user"
                }
              }
            }  
          },
          "400": {
            "description": "Insert a new name ."
          }
        }
      }  
    },
    "/tasks/": {
      "post": {
        "tags": [ "Tasks" ],
        "summary": "Create a task",
        "description": "Create a new task",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/tasks"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Internal server error"
          }
        }
      },
      "get": {
        "tags": [ "Tasks" ],
        "summary": "List task by id",
        "description": "List task by id",
        "parameters": [
          {
            "name": "id",
            "in": "header",
            "description": "The task Id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/tasks"
                }
              }
            }
          },
          "400": {
            "description": "Task not found"
          }
        }
      },
      "delete": {
        "tags": [ "Tasks" ],
        "summary": "Remove task by id",
        "description": "Remove task ******from team****** by id",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  }
                },
                "example": {
                  "id": "03d8a4b6-f4e3-4f23-afab-35fb8f364740"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "****************User/task not found************"
          }
        }
      },
      "put": {
        "tags": [ "Tasks" ],
        "summary": "Edit task by id",
        "description": "Edit a task by id",
        "parameters": [
          {
            "name": "id",
            "in": "header",
            "description": "The task Id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Task"
                }
              }
            }  
          },
          "400": {
            "description": "Insert a correct task ."
          }
        }
      }  
    },
    "/tasks": {
      "get": {
        "tags": [ "Tasks" ],
        "summary": "List all tasks",
        "description": "List all tasks",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Task"
                }
              }
            }
          },
          "500": {
            "description": "Tasks not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Task": {
        "properties": {
          "task_id": {
            "type": "string",
            "example": "1"
          },
          "project": {
            "type": "string",
            "example": "Test project"
          },
          "task": {
            "type": "string",
            "example": "Test task"
          },
          "created_at": {
            "type": "Date",
            "example": "2023-01-01 09:00:00"
          },          
          "updated_at": {
            "type": "Date",
            "example": "2023-01-02 09:00:00"
          },
          "start_date": {
            "type": "Date",
            "example": "2023-01-01 09:00:00"
          },
          "end-date": {
            "type": "Date",
            "example": "2023-01-04 09:00:00"
          },
          "total": {
            "type": "number",
            "example": "3 days"
          },
          "user_id": {
            "type": "string",
            "example": "1"
          }
        }
      },
      "User": {
        "properties": {
          "user_id": {
            "type": "string",
            "example": "1"
          },
          "name": {
            "type": "string",
            "example": "Test"
          },
          "email": {
            "type": "string",
            "example": "test@gmail.com"
          },
          "admin": {
            "type": "boolean",
            "example": false
          },
          "password": {
            "type": "string",
            "example": "A12345"
          },
          "confpassword": {
            "type": "string",
            "example": "A12345"
          },
          "avatar": {
            "type": "string",
            "example": "Em execução"
          },
          "department": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Department"
            }
          },
          "created_at": {
            "type": "Date",
            "example": "2023-01-01 09:00:00"
          },          
          "updated_at": {
            "type": "Date",
            "example": "2023-01-02 09:00:00"
          }
        }
      },
      "Department": {
        "properties": {
          "Developers": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/User"
            }
          },
          "IA": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/User"
            }
          },
          "RPA": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/User"
            }
          }
        }
      }
    }
  }
}